{
	"name": "donatj/mddoc",
	"description": "Powerful, User Directed Markdown Documentation Generator",
	"require": {
		"php": ">=7.2",
		"ext-dom": "*",
		"ext-json": "*",
		"ext-libxml": "*",

		"donatj/flags": "~1.4",
		"donatj/cli-toolkit": "~0.2",
		"donatj/mddom": "~0.2.0",
		"phpdocumentor/reflection": "~5.1",
		"symfony/polyfill-php80": "^1.23"
	},
	"require-dev": {
		"donatj/drop": "~1.0",
		"friendsofphp/php-cs-fixer": "^3.0",
		"squizlabs/php_codesniffer": "^3.5",
		"corpus/coding-standard": "^0.6.0",
		"php-parallel-lint/php-parallel-lint": "^1.3"
	},
	"license": "MIT",
	"authors": [
		{
			"name": "Jesse Donat",
			"email": "donatj@gmail.com"
		}
	],
	"autoload": {
		"psr-4": {
			"donatj\\MDDoc\\": "src/"
		}
	},
	"bin": [
		"composer/bin/mddoc"
	],
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
